<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/spacing_small"
	android:paddingLeft="@dimen/activity_padding"
	android:paddingRight="@dimen/activity_padding">
	
	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/repositoryCommitRclImgProfile"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginTop="@dimen/spacing_small"
		android:src="@mipmap/app_icon"
		app:civ_border_width="0dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>
	
	<TextView 
		android:id="@+id/repositoryCommitRclTxtCommit"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_small"
		android:layout_marginLeft="@dimen/spacing_middle"
		android:layout_marginRight="@dimen/spacing_xlarge"
		android:maxLines="2"
		android:ellipsize="end"
		android:textAppearance="@style/TextAppearance.AppCompat.Middle.ListTitle"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toRightOf="@id/repositoryCommitRclImgProfile"
		app:layout_constraintRight_toRightOf="parent"/>
	
	<TextView 
		android:id="@+id/repositoryCommitRclTxtName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat.Caption"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@id/repositoryCommitRclTxtCommit"
		app:layout_constraintLeft_toLeftOf="@id/repositoryCommitRclTxtCommit"
		app:layout_constraintBottom_toBottomOf="parent"/>
	
	<TextView 
		android:id="@+id/repositoryCommitRclTxtDate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/spacing_small"
		android:textAppearance="@style/TextAppearance.AppCompat.Caption"
		app:layout_constraintTop_toBottomOf="@id/repositoryCommitRclTxtCommit"
		app:layout_constraintLeft_toRightOf="@id/repositoryCommitRclTxtName"
		app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
