<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/activity_padding">

	<android.support.design.widget.TextInputLayout
		android:id="@+id/dialogAddRemoteEdtLayName"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:theme="@style/AppTheme.TextInputLayout.primary"
		app:errorEnabled="false">

		<android.support.design.widget.TextInputEditText
			android:id="@+id/dialogAddRemoteEdtName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/name"
			android:inputType="text"
			android:singleLine="true" />

	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
		android:id="@+id/dialogAddRemoteEdtLayUrl"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_small"
		app:layout_constraintTop_toBottomOf="@id/dialogAddRemoteEdtLayName"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:theme="@style/AppTheme.TextInputLayout.primary"
		app:errorEnabled="false">

		<android.support.design.widget.TextInputEditText
			android:id="@+id/dialogAddRemoteEdtUrl"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/url"
			android:inputType="textUri"
			android:singleLine="true" />

	</android.support.design.widget.TextInputLayout>
	
</android.support.constraint.ConstraintLayout>
